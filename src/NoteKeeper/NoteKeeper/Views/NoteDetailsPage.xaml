<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteKeeper.Views.NoteDetailsPage"
             Title="Add Note">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="SaveNote_Clicked"/>
        <ToolbarItem Text="Cancel" Clicked="CancelNote_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout
        Margin="10,10,10,10"
        Spacing="20"
        Padding="15"
        >
            <Editor Text="{Binding SelectedNote.Title}"
            Placeholder="Title" 
            x:Name="noteTitle"
            FontSize="Medium"/>
            <Picker Title="Note Categy" 
                    ItemsSource="{Binding NoteTypes}"  
                    SelectedItem="{Binding SelectedNote.NoteType}"
                FontSize="Medium"
                x:Name="noteTypes"/>

            <Editor 
                Text="{Binding SelectedNote.Text}"
            Placeholder="Content" 
            x:Name="noteContent" 
            FontSize="Medium"
            AutoSize="TextChanges"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>